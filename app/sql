CREATE TABLE CONTAINERS(
   HOST           TEXT,
   NAME           TEXT,
   LATEST         TEXT,
   ERROR          TEXT,
   NEW            TEXT
);


CREATE TABLE STATE(
   ID INT PRIMARY KEY   NOT NULL,
   RUNNING        TEXT  NOT NULL
);

psql -U postgres -d postgres
INSERT INTO CONTAINERS(HOST,NAME,LATEST,ERROR,NEW)
VALUES('srv1','plex','false','false','true');
